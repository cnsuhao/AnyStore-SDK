<App>
	<!-- XML文件的版本号，程序检查此项的值与服务器做对比，决定更不更新 -->
	<XMLVer>1.0</XMLVer>

	<!-- 游戏的版本号 -->
	<AppVer>1.1</AppVer>

	<!-- 游戏的名称 -->
	<AppName>游戏名称</AppName>

	<!-- 游戏ID，由触控分配给开发者，-->
	<AppID>游戏ID</AppID>

	<!-- 游戏ID，由触控指定，分配给开发者在游戏发布时候使用-->
	<ChannelID>渠道ID</ChannelID>

	<MMSDKConfig>
			<!-- mm sdk的key -->
			<MMKey>12345ABCDE</MMKey>

			<!-- mm sdk分配的APP ID-->
			<MMID>MM13530</MMID>
	</MMSDKConfig>

	<!-- 预留信息位置，暂时无用 -->
	<AppProps>待扩展</AppProps>

	<!-- Items是全部的道具映射关系 -->
	<Items>
		<!-- Item是道具和付费的映射关系， itemCode是触控分配给开发者用的，某种道具或者服务的编号-->
		<item itemCode = "0007">
			<itemName>金币</itemName> <!-- 物品或者服务的名称，开发者应该知道这个信息 -->
			<itemPrice>1000</itemPrice> <!-- 物品或者服务的价格，开发者应该知道这个信息 -->
			<itemNumber>100</itemNumber> <!-- 物品的数量，开发者应该知道这个信息 -->

			<!-- Item的附加属性 -->
			<itemprops> 
				<discount>75</discount> <!-- Item的折扣率，100为不打折，95为95折，50为半价 -->
				<monthly>1</monthly> <!-- 标志此道具或者服务是否是包月物品，1为包月，0为非包月 -->
			</itemprops>

			<!-- Item的对应的支付渠道信息 -->
			<payProps>
					<pay payType="0" > <!-- 每个pay对应一种SDK支付渠道，0为游戏基地，1为MM，2为联动 -->
						<payCode>0371</payCode> <!-- 游戏基地必需的参数，paycode，由触控向基地申请，运营人员填写 -->
					</pay>

					<pay payType="1">
						<payCode>0025</payCode><!-- MM必需的参数，paycode，由触控向基地申请，运营人员填写 -->
					</pay>

					<pay payType="2">
						<merID>6851</merID> <!-- 联动必需的参数，商户号，由触控向基地申请，运营人员填写 -->
						<goodsID>010</goodsID> <!-- 联动必需的参数，物品编号，由触控向基地申请，运营人员填写 -->
						<amount>10</amount> <!-- 联动必需的参数，价格，由触控向基地申请，运营人员填写 -->
					</pay>	
			</payProps>

			<feedback>
					<feedbackItemName>金币</feedbackItemName> <!-- 返回给开发者的信息，购买的物品名称 -->
					<feedbackItemCode>0007</feedbackItemCode> <!-- 返回给开发者的信息，购买的道具或者服务编号，与itemCode是同一数值 -->
					<feedbackItemNumber>100</feedbackItemNumber> <!-- 返回给开发者的信息，购买的物品的数量 -->
			</feedback>
		</item>

		<item itemCode = "0008">
			<itemName>金币</itemName>
			<itemPrice>100</itemPrice>
			<itemNumber>10</itemNumber>

			<itemprops>
				<discount>90</discount>
				<monthly>1</monthly>
			</itemprops>

			<payProps>
					<pay payType="0" >
						<payCode>0371</payCode>
					</pay>

					<pay payType="1">
						<payCode>0025</payCode>
					</pay>

					<pay payType="2">
						<merID>6851</merID>
						<goodsID>010</goodsID>
						<amount>10</amount>
					</pay>	
			</payProps>

			<feedback>
					<feedbackItemName>金币</feedbackItemName>
					<feedbackItemCode>0007</feedbackItemCode>
					<feedbackItemNumber>100</feedbackItemNumber>
			</feedback>
		</item>
	</Items>
</App>